<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0dp" /> <!-- Устанавливаем радиус 0dp, чтобы избежать скругления вверху -->
        </shape>
    </item>
    <item android:top="1dp"> <!-- Смещаем вниз, чтобы создать эффект тени -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="30dp" /> <!-- Устанавливаем радиус только снизу -->
            <stroke
                android:width="1dp"
                android:color="#8D8D8D" /> <!-- Устанавливаем цвет тени и её ширину -->
        </shape>
    </item>
</layer-list>